<% include ../../partials/app_header %>
<section id="idPageSection">
  <div class="page">
      <div id="idFront">
        <div id="idHeader" class="text-center">
          <img src="/img/phflag.png" alt="" id="phflag">
          <h5>Republic of the Philippines</h5>
          <img src="/img/pasig.png" alt="" id="phflag">
          <img src="/img/pwdlogo.jpg" alt="" id="phflag">
        </div>
        <div id="province" >
          <span>Province of NCR</span>
        </div>
        <div id="pwdInfo" class="text-center">
          <h4>Municipality of Pasig</h4>
          <div id="nameContainer">
            <h3><%= info.first_name %> <%= info.last_name %></h3>
          </div>
          <span>Full Name</span>
          <div id="nameContainer">
            <h3><%= disability %></h3>
          </div>
          <span>Disability</span>
          <span id="valid-text">Valid anywhere in the country</span>
        </div>
        <div id="pwdImg">
