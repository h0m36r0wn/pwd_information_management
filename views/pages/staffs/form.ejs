<% include ../../partials/app_header %>
<% include ../../partials/app_nav %>

<section id="create-staff-section">
  <div class="container main-container">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1">
          <h2>Staffs</h2>
          <hr>
          <form id="staffAccForm"  method="post">
            <div class="form-group">
              <label>Email</label>
              <input type="text" name="email" class="form-control input-lg">
            </div>
            <div class="form-group">
              <label>Barangay</label>
              <select class="form-control input-lg" name="barangay" id="barangays">
                <option value="" selected hidden>Select barangay designation</option>
                <% Object.keys(barangays).forEach(function(key){ %>
                  <option value="<%= key %>"><%= barangays[key] %>  </option>
                <%}) %>
              </select>
            </div>
            <div class="form-group">
              <label>First Name</label>
              <input type="text" name="first_name" value="" class="input-lg form-control">
            </div>
            <div class="form-group">
              <label>Last Name</label>
              <input type="text" name="last_name" class="input-lg form-control" value="">
            </div>
            <div class="form-group">
              <label>Mobile Number</label>
              <input type="text" name="mobile_number" class="input-lg form-control" value="">
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-default btn-lg btn-block">Create Account</button>
            </div>
          </form>
      </div>
    </div>
  </div>
</section>



<% include ../../partials/app_vendors %>
<script type="text/javascript" src="/js/staff_form.js"></script>
<% include ../../partials/app_footer %>
