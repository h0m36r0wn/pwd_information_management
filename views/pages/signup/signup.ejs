<% include ../../partials/landing_header %>
<% include ../../partials/landing_nav %>

<section id="content-background">
  <div class="container">
    <h2>Signup</h2>
  </div>
</section>
<section id="form-container">
  <div class="container">
    <div class="col-lg-10 col-lg-offset-1 col-xs-12 col-sm-12">
        <div class="panel panel-defult">
          <div class="panel-body">
            <form id="signupForm"  method="post">
                <h2>Login Information <i class="fa fa-question-circle" data-toggle="tooltip" title="Login information for logging-in in the system"  aria-hidden="true"></i> </h2>
                <hr>
                <div class="form-group">
                  <label>Email</label>
                  <input type="text" name="email" value="" class="input-lg form-control">
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-lg-6">
                      <label>Password</label>
                      <input type="password" name="password"  id="password" value="" class="input-lg form-control" id="password">
                    </div>
                    <div class="col-lg-6">
                      <label>Confirm Password <i class="fa fa-question-circle" data-toggle="tooltip" title="Enter again your password"  aria-hidden="true"></i></label>
                      <input type="password" name="confirm_pass" value="" class="input-lg form-control" id="confirm_pass">
                    </div>
                  </div>
                </div>

                <h2>PWD Information <i class="fa fa-question-circle" data-toggle="tooltip" title="Basic information of the PWD for profiling"  aria-hidden="true"></i> </h2>
                <hr>
                <div class="form-group">
                  <div class="row">
                    <div class="col-lg-6">
                      <label>First Name</label>
                      <input type="text" name="first_name" value="" class="input-lg form-control">
                    </div>
                    <div class="col-lg-6">
                      <label>Last Name</label>
                      <input type="text" name="last_name" class="input-lg form-control" value="">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label>Disability <i class="fa fa-question-circle" data-toggle="tooltip" title="Disability classification of the PWD"  aria-hidden="true"></i></label>
                  <select class="input-lg form-control" name="disability" id="disability-type">
                    <option value="" selected hidden>Type of disability</option>
                    <% Object.keys(disabilities).forEach(function(key){ %>
                      <option value="<%= key %>"><%= disabilities[key] %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label>Barangay <i class="fa fa-question-circle" data-toggle="tooltip" title="Barangay where the PWD located at"  aria-hidden="true"></i></label>
                  <select class="form-control input-lg" name="barangays" id="barangays">
                    <option value="" selected hidden>Select your barangay</option>
                    <% Object.keys(barangays).forEach(function(key){ %>
                      <option value="<%= key %>"><%= barangays[key] %>  </option>
                    <%}) %>
                  </select>
                </div>
                <div class="form-group">
                  <label>Mobile Number</label>
                  <input type="text" name="mobile_num" value="" class="input-lg form-control">
                </div>
                <div class="form-group">
                  <label>Address</label>
                  <textarea name="address" rows="5" class="input-lg form-control"></textarea>
                </div>
                <div class="form-group">
                  <label>Has Companion <i class="fa fa-question-circle" data-toggle="tooltip" title="Do you have any companion in life ex. relative, spouse , mother and such"  aria-hidden="true"></i></label>
                  <select class="input-lg form-control" name="has_companion" id="has-companion">
                    <option value="" hidden selected>Do you have a companion?</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                  </select>
                </div>
                <h2 class="companion-info">Companion Information <i class="fa fa-question-circle" data-toggle="tooltip" title="Information of PWD's companion"  aria-hidden="true"></i> </h2>
                <hr class="companion-info">
                <div class="form-group companion-info">
                  <label>Relationship</label>
                  <select class="form-control input-lg" name="relationship" id="companionRel">
                    <option value="" selected hidden>Select companion type</option>
                    <option value="guardian">Guardian</option>
                    <option value="spouse">Spouse</option>
                    <option value="parent">Parent</option>
                    <option value="relative">Relative</option>
                  </select>
                </div>
                <div class="form-group companion-info">
                  <div class="row">
                    <div class="col-lg-6">
                      <label>First name</label>
                      <input type="text" name="companion_fname" value="" class="input-lg form-control" id="compFname">
                    </div>
                    <div class="col-lg-6">
                      <label>Last name</label>
                      <input type="text" name="companion_lname" value="" class="input-lg form-control"  id="compLname">
                    </div>
                  </div>
                </div>
                <div class="form-group companion-info">
                  <label>Mobile Number</label>
                  <input type="text" name="companion_mobile_num" value="" class="input-lg form-control"  id="compMobNum">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn-lg  btn btn-block btn-default">Submit</button>
                </div>
            </form>
          </div>
        </div>
    </div>
  </div>
</section>
<% include ../../partials/landing_vendors %>
<script type="text/javascript" src="/js/signup.js"></script>
<% include ../../partials/landing_footer %>
