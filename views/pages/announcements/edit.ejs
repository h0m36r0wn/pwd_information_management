<% include ../../partials/app_header %>
<% include ../../partials/app_nav %>

<section id="announcements-section">
  <div class="container main-container">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1">
        <h2>Announcement</h2>
        <hr>
        <form id="announcementForm" method="post">
          <div class="form-group">
            <label>Title</label>
            <input type="text" name="title" value="<%= annDetails.title %>" class="input-lg form-control">
          </div>
          <div class="form-group">
            <label>Content</label>
            <textarea name="content"  class="form-control" rows="8"><%= annDetails.content%></textarea>
          </div>
          <div class="form-group">
            <input type="text" name="announcement_id" value="<%= annDetails._id %>" style="display:none;">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-lg btn-default" id="publishContent">Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<% include ../../partials/app_vendors %>
<script type="text/javascript" src="/js/announcements_form.js"></script>
<% include ../../partials/app_footer %>
